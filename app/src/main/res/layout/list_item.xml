<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dimen8dp"
    app:cardElevation="@dimen/dimen24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen8dp">

        <ImageView
            android:id="@+id/iconFade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimenlisticonpadding2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/font24sp"
            android:layout_marginStart="@dimen/dimen16dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iconFade"
            android:layout_marginLeft="@dimen/dimen24dp"
            />

        <TextView
            android:id="@+id/list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desc"
            android:textSize="@dimen/font16sp"
            android:layout_marginLeft="@dimen/dimen24dp"
            android:layout_below="@id/list_title"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>