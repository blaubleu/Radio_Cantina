<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen8dp"
    android:layout_marginVertical="@dimen/dimen4dp"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="@dimen/dimen24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen8dp">

        <ImageView
            android:id="@+id/iconFade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/dimen8dp"
            android:padding="@dimen/dimenlisticonpadding2dp" />

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen16dp"
            android:layout_marginLeft="@dimen/dimen24dp"
            android:layout_marginStart="@dimen/dimen16dp"
            android:layout_toRightOf="@id/iconFade"
            android:text="Title"
            android:textSize="@dimen/font22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/list_title"
            android:layout_below="@+id/list_title"
            android:layout_marginLeft="@dimen/dimen8dp"
            android:layout_marginVertical="@dimen/dimen8dp"
            android:text="Desc"
            android:textSize="@dimen/font16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>